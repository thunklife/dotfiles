{
  "ecmaFeatures": {
                    "arrowFunctions": true,
                    "blockBindings": true,
                    "defaultParams": true,
                    "generators": true,
                    "modules": true,
                    "objectLiteralShorthandMethods": true,
                    "objectLiteralShorthandProperties": true,
                    "spread": true,
                    "templateStrings": true
                    },
  "env": {
          "browser": true,
          "node": true,
          "mocha": true,
          "es6": true
          },
  "rules": {
            /* POSSIBLE ERRORS */
            "no-cond-assign": 2,
            "no-console": 1,
            "no-constant-condition": 0,
            "no-debugger": 1,
            "no-extra-parens": 2,
            "no-sparse-arrays": 2,
            "no-unreachable": 2,
            "use-isnan": 1,
            "valid-typeof": 2,

            /* BEST PRACTICES */
            "curly": [2, "multi"],
            "eqeqeq": "smart",
            "guard-for-in": 2,
            "no-caller": 2,
            "no-extra-bind": 1,
            "no-lone-blocks": 1,
            "no-loop-func": 1,
            "no-multi-spaces": 1,
            "no-native-reassign": 2,
            "no-with": 1,
            "radix": 2,
            "vars-on-top": 2,
            "yoda": 1,

            /* STYLE */
            "indent": [2, 2],
            "func-names": 2,
            "new-parens": 2,
            "newline-after-var": [2, "always"],
            "no-trailing-spaces": 2,
            "quotes": [2, "single"],
            "semi": 2,
            "space-after-keywords": [2, "always"],
            "space-before-blocks": [2, "always"],
            "space-before-function-paren": [2, "always"]
            }
}